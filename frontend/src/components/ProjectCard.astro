---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import styles from "./ProjectCard.module.scss";

interface Props {
  imagePath: string | null;
  title: string;
  description?: string;
  url: string;
}

const {imagePath, title, description, url} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');
if (imagePath && !images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`);
---
<div class={styles.projectCard}>
  
    {imagePath && <Image src={images[imagePath]()} alt="Magnify" loading="lazy" />}
    <div class={styles.body}>
      <div class={styles.content}>
        <h3 class="text-2xl font-medium">{title}</h3>
        {description && <p class="text-base">{description}</p>}
      </div>
      <a class="button mt-4 is-small" href={url} target="_blank" rel="noopener noreferrer">Check it out</a>
    </div>
</div>
