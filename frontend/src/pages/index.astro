---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Icon } from "astro-icon/components";
import Particles from "astro-particles";
import type { ISourceOptions } from "tsparticles-engine";
import FloatingHead from "../components/FloatingHead.tsx";
import InteractionWrapper from "../components/InteractionWrapper.tsx";

const options: ISourceOptions = {
  background: {
    color: "#000",
  },
  fullScreen: {
    zIndex: -1,
  },
  particles: {
    number: {
      value: 100,
    },
    move: {
      enable: true,
    },
  },
};

let text = "Hello!";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <!--  <Header title={SITE_TITLE} /> -->

    <div class="container">
      <aside class="head-container">
        <FloatingHead text={text} client:load />
      </aside>

      <main>
        <section>
          <InteractionWrapper client:load text="To sam ja">
            <h1 class="font-bold">{SITE_TITLE}</h1>
          </InteractionWrapper>
          <p>
            {SITE_DESCRIPTION}
          </p>

          <ul class="flex flex-wrap gap-4">
            <li>
              <InteractionWrapper client:load text="Javi se slobodno">
                <a
                  class="button"
                  href="https://www.linkedin.com/in/nikola-mili%C4%87-9736a6167/"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="linkedin" class="w-6 h-6" />
                  LinkedIn
                </a>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper
                client:load
                text="Pogledaj slobodno ali jedino pametno što ima je ovaj projekt"
              >
                <a
                  class="button"
                  href="https://github.com/nmilic96"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="github" class="w-6 h-6" />
                  GitHub
                </a>
              </InteractionWrapper>
            </li>
          </ul>
        </section>

        <section>
          <h2 class="text-4xl mb-4">Skills</h2>

          <ul class="grid grid-cols-4 auto-rows-fr gap-3">
            <li>
              <InteractionWrapper client:load text="Moj omiljeni">
                <div class="card">
                  <Icon name="mdi:language-javascript" class="w-12 h-12" />
                  <span class="card__text">Javascript</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Javascript je bolji s typescriptom, zna se">
                <div class="card">
                  <Icon name="mdi:language-typescript" class="w-12 h-12" />
                  <span class="card__text">Typescript</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Ova glava je zapravo React komponenta">
                <div class="card">
                  <Icon name="mdi:react" class="w-12 h-12" />
                  <span class="card__text">React.js</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Odradio sam par aplikacija u React nativeu">
                <div class="card">
                  <Icon name="mdi:react" class="w-12 h-12" />
                  <span class="card__text">React Native</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Znam i nešto malo backenda">
                <div class="card">
                  <Icon name="mdi:language-ruby-on-rails" class="w-12 h-12" />
                  <span class="card__text">Ruby on Rails</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="...">
                <div class="card">
                  <Icon name="mdi:language-html5" class="w-12 h-12" />
                  <span class="card__text">HTML5</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Obožavam CSS (ozbiljno)">
                <div class="card">
                  <Icon name="mdi:language-css3" class="w-12 h-12" />
                  <span class="card__text">CSS3</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Obožavam CSS još više kad je SASS">
                <div class="card">
                  <Icon name="mdi:sass" class="w-12 h-12" />
                  <span class="card__text">Sass</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Tailwind mi je najbolji kad želim nešto stilizirati na brzinu">
                <div class="card">
                  <Icon name="mdi:tailwind" class="w-12 h-12" />
                  <span class="card__text">Tailwind CSS</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="Shopify teme, aplikacije, sve može">
                <div class="card">
                  <Icon name="shopify" class="w-12 h-12" />
                  <span class="card__text">Shopify</span>
                </div>
              </InteractionWrapper>
            </li>
            <li>
              <InteractionWrapper client:load text="git commit . git push -f">
                <div class="card">
                  <Icon name="mdi:git" class="w-12 h-12" />
                  <span class="card__text">Git</span>
                </div>
              </InteractionWrapper>
            </li>
          </ul>
        </section>

        <section>
          <h2 class="text-4xl mb-4">Projects</h2>
          <ul class="flex flex-wrap gap-3">
            <li>
              <a href="#" target="_blank" rel="noopener noreferrer"
                >Nikola's Portfolio</a
              >
            </li>
